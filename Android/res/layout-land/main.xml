<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:gauge="http://schemas.android.com/apk/res/be.kdg.FastradaMobile"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#404141"
                android:padding="10dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:id="@id/linearImageView">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView1" android:src="@drawable/rpmgreen" android:layout_marginRight="5dp"
                    android:maxHeight="23dp" android:maxWidth="23dp" android:adjustViewBounds="true"
                    />
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:id="@+id/imageView2" android:src="@drawable/rpmgreen" android:layout_marginRight="5dp"
                       android:maxHeight="23dp" android:maxWidth="23dp" android:adjustViewBounds="true"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:id="@+id/imageView3" android:src="@drawable/rpmgreen" android:layout_marginRight="5dp"
                       android:maxHeight="23dp" android:maxWidth="23dp" android:adjustViewBounds="true"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:id="@+id/imageView4" android:src="@drawable/rpmgreen" android:layout_marginRight="5dp"
                       android:maxHeight="23dp" android:maxWidth="23dp" android:adjustViewBounds="true"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:id="@+id/imageView5" android:src="@drawable/rpmgreen" android:layout_marginRight="5dp"
                       android:maxHeight="23dp" android:maxWidth="23dp" android:adjustViewBounds="true"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/imageView6"
                       android:src="@drawable/rpmgreen" android:layout_marginRight="5dp" android:maxHeight="23dp"
                       android:maxWidth="23dp" android:adjustViewBounds="true"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:id="@+id/imageView7" android:src="@drawable/rpmgreen" android:layout_marginRight="5dp"
                       android:maxHeight="23dp" android:maxWidth="23dp" android:adjustViewBounds="true"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:id="@+id/imageView8" android:src="@drawable/rpmgreen" android:layout_marginRight="5dp"
                       android:maxHeight="23dp" android:maxWidth="23dp" android:adjustViewBounds="true"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:id="@+id/imageView9" android:src="@drawable/rpmgreen" android:layout_marginRight="5dp"
                       android:maxHeight="23dp" android:maxWidth="23dp" android:adjustViewBounds="true"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:id="@+id/imageView10" android:src="@drawable/rpmgreen" android:layout_marginRight="5dp"
                       android:maxHeight="23dp" android:maxWidth="23dp" android:adjustViewBounds="true"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:id="@+id/imageView11" android:src="@drawable/rpmgreen" android:layout_marginRight="5dp"
                       android:maxHeight="23dp" android:maxWidth="23dp" android:adjustViewBounds="true"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:id="@+id/imageView12" android:src="@drawable/rpmgreen" android:layout_marginRight="5dp"
                       android:maxHeight="23dp" android:maxWidth="23dp" android:adjustViewBounds="true"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:id="@+id/imageView13" android:src="@drawable/rpmgreen" android:layout_marginRight="5dp"
                       android:maxHeight="23dp" android:maxWidth="23dp" android:adjustViewBounds="true"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:id="@+id/imageView14" android:src="@drawable/rpmgreen" android:layout_marginRight="5dp"
                       android:maxHeight="23dp" android:maxWidth="23dp" android:adjustViewBounds="true"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:id="@+id/imageView15" android:src="@drawable/rpmgreen" android:layout_marginRight="5dp"
                       android:maxHeight="23dp" android:maxWidth="23dp" android:adjustViewBounds="true"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:id="@+id/imageView16" android:src="@drawable/rpmgreen" android:layout_marginRight="5dp"
                       android:maxHeight="23dp" android:maxWidth="23dp" android:adjustViewBounds="true"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:id="@+id/imageView17" android:src="@drawable/rpmgreen" android:layout_marginRight="5dp"
                       android:maxHeight="23dp" android:maxWidth="23dp" android:adjustViewBounds="true"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:id="@+id/imageView18" android:src="@drawable/rpmgreen" android:layout_marginRight="5dp"
                       android:maxHeight="23dp" android:maxWidth="23dp" android:adjustViewBounds="true"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:id="@+id/imageView19" android:src="@drawable/rpmgreen" android:layout_marginRight="5dp"
                       android:maxHeight="23dp" android:maxWidth="23dp" android:adjustViewBounds="true"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:id="@+id/imageView20" android:src="@drawable/rpmgreen" android:layout_marginRight="5dp"
                       android:maxHeight="23dp" android:maxWidth="23dp" android:adjustViewBounds="true"/>
        </LinearLayout>
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <LinearLayout
                android:id="@+id/dashboard_left"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/dashboard_rpm_units"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:text="0 RPM"/>

                <TextView
                    android:id="@+id/dashboard_rpm_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:text="@string/engine_rpm"/>

                <ProgressBar
                    android:id="@+id/dashboard_rpm_indicator"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_marginTop="20dp"
                    android:progressDrawable="@drawable/rpm_progressbar"
                    android:progress="100"/>
            </LinearLayout>
            <org.codeandmagic.android.gauge.GaugeView
                android:id="@+id/dashboard_speed_gauge"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_centerInParent="true"
                gauge:showOuterShadow="true"
                gauge:showOuterRim="false"
                gauge:showNeedle="false"
                gauge:showRanges="false"
                gauge:showText="true"
                gauge:textUnit="km/h"/>
            <LinearLayout
                android:id="@+id/dashboard_right"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="right">

                    <TextView
                        android:id="@+id/dashboard_pressure_units"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:text="0 PSI"
                        android:gravity="right"/>

                    <TextView
                        android:id="@+id/dashboard_pressure_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:text="@string/engine_pressure"
                        android:gravity="right"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="bottom|right">

                    <TextView
                        android:id="@+id/dashboard_temperature_units"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:text="0 °C"
                        android:gravity="right"/>

                    <TextView
                        android:id="@+id/dashboard_temperature_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:text="@string/engine_temperature"
                        android:gravity="right"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>