<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gauge="http://schemas.android.com/apk/res/be.kdg.FastradaMobile"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/black"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/dashboard_top"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/dashboard_rpm_units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="4076 RPM" />

        <TextView
            android:id="@+id/dashboard_rpm_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:text="@string/engine_rpm" />

        <!--ProgressBar
            android:id="@+id/dashboard_rpm_indicator"
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:layout_marginTop="20dp"
            android:indeterminateDrawable="@drawable/rpm_progressbar"/-->
    </LinearLayout>

    <org.codeandmagic.android.gauge.GaugeView
        android:id="@+id/dashboard_speed_gauge"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        gauge:showOuterShadow="true"
        gauge:showOuterRim="false"
        gauge:showNeedle="false"
        gauge:showRanges="false"
        gauge:showText="true"
        gauge:textUnit="km/h" />

    <LinearLayout
        android:id="@+id/dashboard_bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dashboard_speed_gauge"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/dashboard_pressure_units"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:text="16 PSI" />

            <TextView
                android:id="@+id/dashboard_pressure_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:text="@string/engine_pressure" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/dashboard_temperature_units"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:text="103 Â°C"
                android:gravity="right" />

            <TextView
                android:id="@+id/dashboard_temperature_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:text="@string/engine_temperature"
                android:gravity="right" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

