<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="RPM" >
        <EditTextPreference
                android:title="Max RPM"
                android:summary="Set the Maximum RPM."
                android:key="prefMaxRPM"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="Alarm" >
        <CheckBoxPreference
                android:key="prefAlarmEnabled"
                android:summary="Enable alarm when engine temperature exceeds maximum value."
                android:title="Enable Alarm" />
        <EditTextPreference
                android:title="Max Temperature"
                android:summary="Set the maximum temperature."
                android:key="prefAlarmTemperature"
                android:editable="false"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="GaugeView" >
        <ListPreference
                android:key="prefSyncFrequency"
                android:entries="@array/gaugeView"
                android:summary="Choose Number or Needle output for speed."
                android:entryValues="@array/gaugeViewValue"
        android:title="GaugeView" />
    </PreferenceCategory>




</PreferenceScreen>